{% extends "plantilla.html" %}

{% block title %} Consulta Clientes {% endblock %}

{% block estilos %}
<link rel="stylesheet" href="/static/css/consulta-clientes.css" />
<link rel="stylesheet" href="/static/DataTables/datatables.min.css">
{% endblock %}


{% block scripts %}
<script src="/static/js/uscripts/consulta_clientes.js"></script>
<script src="https://kit.fontawesome.com/30c693948f.js" crossorigin="anonymous"></script>
<script src="/static/DataTables/datatables.min.js"></script>
{% endblock %}

{% block content %}

<div class="row">

	<div class="col-sm-1 C_headerbody">
		{% if ERRORES %}
		<div class="alert alert-danger">{{ ERRORES }}</div>
		{% endif %}
	</div>


	<div class="col-sm-10 cont" id="contenedor">
		<!--Header-->
		<header>
			<h2 class="logo">Clientes</h2>
			<input type="checkbox" id="check">
			<label for="check" class="mostrar-menu">
				&#8801
			</label>
			<nav class="menu">
				<a href=""><button class="btn useradd"><i class="fas fa-user-plus text-white"></i></button></a>
				<a href=""><button class="btn userrecargar"><i class="fas fa-rotate"></i></button></a>
				<a href="#"><button id="btnTrash" class="btn usertrash" data-bs-toggle="modal"
						data-bs-target="#motivoEliminar"><i class="fas fa-trash text-white"></i></button></a>
				<a href=""><button class="btn filtrarAsc"><i
							class=" fas fa-arrow-up-wide-short text-white"></i></button></a>
				<a href=""><button class="btn filtrarDes"><i
							class="fas fa-arrow-down-wide-short text-white"></i></button></a>
				<label for="check" class="esconder-menu">
					&#215
				</label>
			</nav>
		</header>

		<!--Cuerpo -->
		<div class="row C_sectionformulario">
			<div class="col-sm-1"></div>
			<!-- INICIA TABLE PARA MOSTRAR LAS CONSULTAS  -->
			<div id="contenedorTabla"> <!--Inicia el contenedor de la Tabla-->
